                        <left>48</left>
                        <top>373</top>
                        <height>34</height>
                        <width>200</width>
                        <label>$INFO[ListItem.Label]</label>
                        <align>left</align>
                        <aligny>left</aligny>
                        <font>primal_15_Title</font>
                        <textcolor>ff00ff7f</textcolor>
                        <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
                    </control>
                    <control type="group">
                        <visible>!Skin.HasSetting(movieactor)</visible>
                        <control type="image">
                            <left>20</left>
                            <top>410</top>
                            <width>20</width>
                            <height>20</height>
                            <texture background="true">home/homeicons/star.png</texture>
                            <aspectratio>stretch</aspectratio>

                            <colordiffuse>$VAR[ColorFontNormal]</colordiffuse>
                        </control>
                        <control type="label">
                            <left>50</left>
                            <top>407</top>
                            <height>34</height>
                            <width>200</width>
                            <label>$INFO[ListItem.RatingAndVotes]</label>
                            <align>left</align>
                            <aligny>left</aligny>
                            <font>primal_15_Title</font>
                            <textcolor>FFEBE627</textcolor>
                            <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>

                        </control>
                    </control>
                </focusedlayout>
                <content limit="" sortby="" sortorder="" target="videos">$VAR[SubmenuPlaylistWidgets]</content>
                <!-- <content target="video">$VAR[SubmenuPlaylistWidgets]</content> -->
