<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="HomeWidgetsSubmenu">

        <!--=================================== SUBMENU WIDGETS FOR PLAYLIST
        =====================================-->
        <control type="group">
            <left></left>
            <visible>ControlGroup(9001).HasFocus | ControlGroup(9010).HasFocus |
                Control.HasFocus(43944)</visible>
            <include>widget_inzoom_submenu</include>
            <control type="list" id="43944">
                <left>355</left>
                <top>250</top>
                <width>1570</width>
                <height>500</height>
                <onleft>9001</onleft>
                <onright>9001</onright>
                <onup>1860</onup>
                <ondown>9001</ondown>
                <viewtype>list</viewtype>
                <orientation>horizontal</orientation>
                <focusposition>0</focusposition>
                <pagecontrol>-</pagecontrol>
                <scrolltime>500</scrolltime>
                <itemlayout width="265" height="475">

                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>260</width>
                        <height>470</height>
                        <texture background="true">skin/button_klein.png</texture>
                        <bordertexture border="10">ThumbShadow.png</bordertexture>
                        <bordersize>6</bordersize>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>$VAR[ColorButtonDialogeBack]</colordiffuse>

                    </control>

                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>260</width>
                        <height>360</height>
                        <texture background="true">$VAR[MovieWidgetsIconsVar]</texture>
                        <!-- <texture background="true">$INFO[ListItem.Icon]</texture> -->
                        <bordertexture border="10">-</bordertexture>
                        <bordersize>6</bordersize>
                        <aspectratio align="center" aligny="top">stretch</aspectratio>
                    </control>

                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>260</width>
                        <height>360</height>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <bordertexture border="10">-</bordertexture>
                        <bordersize>6</bordersize>
                        <visible>String.IsEqual(listitem.dbtype,artist) | String.IsEqual(listitem.dbtype,album)</visible>
                        <aspectratio align="center" aligny="top">stretch</aspectratio>
                    </control>

                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>260</width>
                        <height>360</height>
                        <texture background="true">$INFO[Player.Art(tvshow.poster)]</texture>
                        <bordertexture border="10">-</bordertexture>
                        <bordersize>6</bordersize>
                        <visible>!IsEmpty(ListItem.Episode)</visible>
                        <aspectratio align="center" aligny="top">stretch</aspectratio>
                    </control>

                    <control type="image">
                        <left>20</left>
                        <top>375</top>
                        <width>20</width>
                        <height>20</height>
                        <texture background="true">home/homeicons/widgets_list.png</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>$VAR[ColorFontNormal]</colordiffuse>

                    </control>

                    <control type="label">
                        <description>Title label</description>
                        <left>48</left>
                        <top>373</top>
                        <height>34</height>
                        <width>200</width>
                        <label>$INFO[ListItem.Label]</label>
                        <align>left</align>
                        <aligny>left</aligny>
                        <font>primal_15_Title</font>
                        <textcolor>$VAR[ColorFontNormal]</textcolor>
                        <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
                    </control>

                    <control type="group">
                        <visible>!Skin.HasSetting(movieactor)</visible>
                        <control type="image">
                            <left>20</left>
                            <top>410</top>
                            <width>20</width>
                            <height>20</height>
                            <texture background="true">home/homeicons/star.png</texture>
                            <aspectratio>stretch</aspectratio>

                            <colordiffuse>$VAR[ColorFontNormal]</colordiffuse>
                        </control>
                        <control type="label">
                            <left>50</left>
                            <top>407</top>
                            <height>34</height>
                            <width>200</width>
                            <label>$INFO[ListItem.RatingAndVotes]</label>
                            <align>left</align>
                            <aligny>left</aligny>
                            <font>primal_15_Title</font>
                            <textcolor>$VAR[ColorFontNormal]</textcolor>
                            <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>

                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="265" height="475">
